<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimulateurATM.Views.LoadingPage"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Shell.NavBarIsVisible="False"
             Title="Chargement">
    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="DarkRed"/>
    </ContentPage.Behaviors>
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center"
      BackgroundColor="AntiqueWhite">
        <ActivityIndicator Color="DarkRed"
                               IsRunning="True" HeightRequest="50" WidthRequest="50"
                               IsVisible="True" />
        <Label Text="Etablissement de la connexion..." HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>