<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimulateurATM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SimulateurATM"
    xmlns:views="clr-namespace:SimulateurATM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SimulateurATM">
    
    <!--Login Page-->
    <ShellContent 
        Title="Connexion" 
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login"/>
    
    <!--Main Page-->
    <ShellContent
        Title="Guichet"
        ContentTemplate="{DataTemplate views:GuichetPage}"
        Route="guichet" />

</Shell>
