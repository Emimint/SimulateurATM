<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimulateurATM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SimulateurATM"
    xmlns:views="clr-namespace:SimulateurATM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SimulateurATM">

    <!--Loading Page-->
    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="loading" />

    <!--Login Page-->
    <ShellContent 
        Title="Connexion" 
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login"/>
    <!--Main Page-->
    <TabBar>
        <Tab Title="Accueil">
            <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="home" />

        </Tab>
        <Tab Title="Vos Comptes">
            <ShellContent
        Title="Vos Comptes"
        ContentTemplate="{DataTemplate views:AccountPage}"
        Route="account" />

        </Tab>
        <Tab Title="Deconnexion" >
            <ShellContent
                  Title="Deconnexion"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="logout" />
        </Tab>
    </TabBar>

</Shell>
